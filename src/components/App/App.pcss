@font-face {
  font-family: Roboto;
  src: url('../../fonts/Roboto.ttf');
}

:root {
  --bg-color: #f5f5f5;
  --color-white: #fff;
  --color-black: #000;
  --color-black-40: rgba(152, 152, 152, 0.4);
  --color-error: rgba(255, 27, 51, 0.8);
  --font-default: Roboto, Arial, sans-serif;
}

body {
  margin: 0;
  box-sizing: border-box;
}

#root {
  width: 100%;
  height: 100%;
}
